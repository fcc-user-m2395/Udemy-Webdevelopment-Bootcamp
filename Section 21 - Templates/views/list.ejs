<%- include('header') -%>
    <div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
    </div>

    <div class="box" id="itemList">

        <% for(let i = 0; i<newListItem.length; i++) { %>
        <div class="item">
            <input type="checkbox">
            <p> <%= newListItem[i] %> </p>
        </div>
        <% } %>

        <form action="/" method="POST" class="item">
            <input type="text" name="newItem" id="listItem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value=<%= listTitle %>>+</button>
        </form>

    </div>

    <%- include('footer') -%>
